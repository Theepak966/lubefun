{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"]
    },
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}