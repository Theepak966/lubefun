<div class="flex flex-col justify-center gap-2">
	<!-- Hero Banner -->
	<div class="home-hero-banner">
		<img src="/img/banner/home-banner.png" alt="" class="home-hero-image" onerror="this.style.display='none'; this.parentElement.style.background='linear-gradient(135deg, rgba(22, 33, 62, 0.95) 0%, rgba(15, 52, 96, 0.95) 100%)';">
	</div>

	<!-- Content Sections -->
	<div class="flex flex-col size-full overflow-auto p-2 gap-4 text-left">
        <div class="section flex flex-col gap-2">
            <div class="flex flex-row justify-between items-center gap-2">
                <div class="flex flex-col gap-1">
                    <div class="title text-xl font-bold" style="background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Casino</div>
                    <div class="description text-muted-foreground">Enjoy casino games at the comforts of your home!</div>
                </div>

                <div class="flex flex-row items-center gap-2">
                    <% if(settings.games.classic.find(a => a.game == 'casino').enable || account.permissions.play_disabled){ %>
                        <a href="/casino"><button class="button button-accent shadow-2">View All</button></a>
                    <% } %>

                    <div class="flex flex-row items-center gap-1">
                        <button class="action button button-accent shadow-2" data-type="left"><i class="fa fa-angle-left" aria-hidden="true"></i></button>
                        <button class="action button button-accent shadow-2" data-type="right"><i class="fa fa-angle-right" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>

            <div class="swiper">
                <div class="casino-list list flex flex-row transition duration-500">
                    <% response.home.casino.games.hot.forEach(function(item){ %>
                        <%- include('./components/casinoGame.ejs', { ...item, ...{
                            enable: item.enable && (settings.games.classic.find(a => a.game == 'casino').enable || account.permissions.play_disabled)
                        } }); %>
                    <% }); %>
                </div>
            </div>
        </div>

        <div class="section flex flex-col gap-2">
            <div class="flex flex-row justify-between items-center gap-2">
                <div class="flex flex-col gap-1">
                    <div class="title text-xl font-bold" style="background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Popular Slots</div>
                    <div class="description text-muted-foreground">Top slot games from leading providers</div>
                </div>

                <div class="flex flex-row items-center gap-2">
                    <% if(settings.games.classic.find(a => a.game == 'casino').enable || account.permissions.play_disabled){ %>
                        <a href="/casino/slots"><button class="button button-accent shadow-2">View All</button></a>
                    <% } %>
                </div>
            </div>

            <div class="slots-grid">
                <% 
                var slotsData = null;
                if(response.home && response.home.casino && response.home.casino.games && response.home.casino.games.slots) {
                    slotsData = response.home.casino.games.slots;
                } else if(response.casino && response.casino.games && response.casino.games.slots) {
                    slotsData = response.casino.games.slots;
                } else if(response.home && response.home.casino && response.home.casino.games && response.home.casino.games.hot) {
                    // Fallback to hot games if slots not available
                    slotsData = response.home.casino.games.hot;
                }
                %>
                <% if(slotsData && slotsData.length > 0) { %>
                    <% slotsData.slice(0, 10).forEach(function(item){ %>
                        <%- include('./components/slotCard.ejs', { ...item, ...{
                            enable: item.enable && (settings.games.classic.find(a => a.game == 'casino').enable || account.permissions.play_disabled)
                        } }); %>
                    <% }); %>
                <% } %>
            </div>
        </div>
	</div>
</div>
