<div class="item <% if(!enable){ %>disabled<% } %>" data-id="<%= id %>">
    <div class="info bg-secondary bg-opacity-50 transition duration-200">
        <% if(enable){ %>
            <div class="rtp text-sm font-bold"><%= rtp %>% RTP</div>

            <div class="favorite pointer <% if(favorite){ %>active<% } %>"><i class="fa fa-heart" aria-hidden="true"></i></div>

            <div class="start flex flex-col gap-2 items-center">
                <a href="/casino/slots/<%= id %>"><div class="play flex flex-col items-center justify-center transition duration-500"><i class="fa fa-play" aria-hidden="true"></i></div></a>

                <% if(demo){ %>
                    <a href="/casino/slots/<%= id %>/demo"><div class="text-xs font-bold">Play Demo</div></a>
                <% } %>
            </div>
        <% } else { %>
            <div class="info bg-secondary bg-opacity-50 transition duration-200">
                <div class="description text-sm text-center font-bold">This game is temporary disabled!</div>
            </div>
        <% } %>

        <div class="name flex flex-col gap-1">
            <div class="text-base text-center font-bold truncate w-full"><%= name %></div>
            <div class="text-xs text-center text-muted-foreground font-bold uppercase truncate w-full"><%= provider %></div>
        </div>
    </div>

    <div class="image transition duration-500"><img src="<%= image %>"></div>
</div>